<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".screens.Settings_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <View
            android:layout_weight="1"
            android:id="@+id/arrow_back"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_baseline_arrow_back_black"/>

        <TextView
            android:layout_weight="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:text="Settings"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/SCREEN"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_account_profile"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Account Profile" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_account_box_24_2"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_background_mode"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Background Mode" />




                <androidx.appcompat.widget.SwitchCompat
                    android:layout_weight="2"
                    android:id="@+id/switcher"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="45dp"
                    android:checked="false"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_notify"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Notifications" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_notifications_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Tell a Friend" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_insert_invitation_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_support"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Support" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_contact_support_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sounds"
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Sounds and Music" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_surround_sound_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fonts"
                    android:layout_weight="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="Fonts" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_font_download_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_update"
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="App Update" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_update_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_about"
                    android:layout_weight="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    style="@style/Text"
                    android:layout_marginStart="20dp"
                    android:text="About" />

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginEnd="45dp"
                    android:background="@drawable/ic_baseline_battery_alert_24"
                    android:layout_height="35dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#575252"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_style"
                android:textStyle="bold"
                android:text="Log Out"
                android:textColor="#B63E18"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>